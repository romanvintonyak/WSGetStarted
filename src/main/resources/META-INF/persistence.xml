<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
        http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd"
             version="1.0">

    <persistence-unit name="datasource" transaction-type="JTA">
        <jta-data-source>java:/MySqlDS</jta-data-source>
        <class>com.osf.romanvintonyak.WSDummy.Entities.Test</class>
        <class>com.osf.romanvintonyak.WSDummy.Entities.User</class>
        <class>com.osf.romanvintonyak.WSDummy.Entities.Client</class>
        <properties>
            <property name="javax.persistence.schemageneration.database.action" value="drop-and-create"/>
        </properties>
    </persistence-unit>
</persistence>